@model IEnumerable<FamilyGo.Models.Activity>

@{

    ViewBag.Title = "Find Activities";
}

<link href="~/Content/lightbox.css" rel="stylesheet" />

<body>
    <!--navigation bar-->
    <div class="container about-heading">
        <h5>
            <a href="@Url.Action("Index","Home")">Home / </a>
            <a href="@Url.Action("Index","Activities")">Activities</a>
        </h5>
    </div>
    <!--//navigation bar-->
    <!--tab selection for different age group-->
    <div class="about-heading container">
        <ul id="myTab" class="nav nav-tabs" role="tabpanel">
            <li role="presentation" class="active"><a href="@Url.Action("Index","Activities")" role="tab">All</a></li>
            <li role="presentation"><a href="@Url.Action("Information","Activities")" role="tab">3-6 years old</a> </li>
            <li role="presentation"><a href="@Url.Action("InformationTwo","Activities")" role="tab">7-12 years old</a></li>
        </ul>
    </div>
    <!--//tab selection for different age group-->
    <!--Activities for all age group-->
    <div class="about-heading container">
        <h4>Activities for all age group:</h4>
    </div>
    <div class="gallery container">
        <div class="gallery-grids">
            <!--Games-->
            <div class="col-md-4 gallery-grid">
                <div class="grid">
                    <figure class="effect-roxy">
                        <a class="image-link" href="@Url.Action("Index", "Games")">
                            <img src="~/Image/66cdaa.jpg" alt="" />
                            <figcaption>
                                <h2>Games</h2>
                            </figcaption>
                        </a>
                    </figure>
                </div>
            </div>
            <!--//Games-->
            <!--Other activities from database-->
            @foreach (var item in Model)
            {
                <div class="col-md-4 gallery-grid">
                    <div class="grid">
                        <figure class="effect-roxy">
                            <a class="image-link" href="@Url.Action("Index", "Places",new {i= item.Name,age = "All" })">
                                <img src="~/Image/66cdaa.jpg" alt="" />
                                <figcaption>
                                    <h2>@Html.DisplayFor(modelItem => item.Name)</h2>
                                </figcaption>
                            </a>
                        </figure>
                    </div>
                </div>
            }
            <!--//Other activities from database-->
        </div>
    </div>
    <!--//Activities for all age group-->
</body>